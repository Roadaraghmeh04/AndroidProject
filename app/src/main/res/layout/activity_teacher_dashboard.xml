<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 🔔 Notification + 👤 Profile -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/notificationBell"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                android:contentDescription="Notifications"
                android:src="@drawable/active" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="260dp"
                android:background="@drawable/bg_circle_grades"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/user" />
        </RelativeLayout>

        <!-- 🧑‍🏫 Teacher Image -->

        <!-- Welcome Message -->
        <ImageView
            android:id="@+id/imgTeacher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_circle_grades"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/roa" />

        <TextView
            android:id="@+id/tvTeacherWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Teacher"
            android:textColor="#6cb1c9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginBottom="32dp" />

        <!-- Options Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="32dp">

            <!-- Schedule -->
            <LinearLayout
                android:id="@+id/Schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_schedule"
                    android:contentDescription="Schedule"
                    android:padding="20dp"
                    android:src="@drawable/ic_schedule" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Schedule"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Grades -->
            <LinearLayout
                android:id="@+id/Grades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_grades"
                    android:contentDescription="Grades"
                    android:padding="20dp"
                    android:src="@drawable/ic_grades" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Grades"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Assignments -->
            <LinearLayout
                android:id="@+id/Assignments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_assignment"
                    android:contentDescription="Assignments"
                    android:padding="20dp"
                    android:src="@drawable/ic_assignment" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Assignments"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- View Submissions -->
            <LinearLayout
                android:id="@+id/ViewSubmissions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_submissions"
                    android:contentDescription="Submissions"
                    android:padding="20dp"
                    android:src="@drawable/ic_view_submitted" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="View Submitted"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </GridLayout>

        <!-- Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="351dp"
            android:layout_height="42dp"
            android:backgroundTint="#6cb1c9"
            android:text="Logout"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp" />
    </LinearLayout>
</ScrollView>
