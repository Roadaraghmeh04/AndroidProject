<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidProject"
        tools:targetApi="31">

        <activity android:name=".TeacherDashboardActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".SubmitAssignmentActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".PublishGradesActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".TeacherScheduleActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".SendAssignmentActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".ViewSubmittedAssignmentsActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AddSubjectActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AddStudentActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AddScheduleActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".ManageUsersActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".RegisterDashboardActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AboutAppActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".LoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".TeacherProfileActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".MessagesActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".ViewGradesActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".ViewScheduleActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AssignmentsListActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".TeacherScheduleViewActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StudentDashboardActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
